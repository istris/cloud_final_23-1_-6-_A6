version: '3.8'

services:
  # 基础版本容器
  app-basic:
    build:
      context: .
      dockerfile: Dockerfile-basic
    image: myapp:basic-v1.0
    container_name: myapp-basic
    ports:
      - "8081:8080"
    environment:
      - APP_NAME=Docker Basic App
      - APP_VERSION=1.0.0
    volumes:
      - ./logs:/app/logs
    restart: unless-stopped

  # 优化版本容器
  app-optimized:
    build:
      context: .
      dockerfile: Dockerfile-optimized
    image: myapp:optimized-v2.0
    container_name: myapp-optimized
    ports:
      - "8082:8080"
    environment:
      - APP_NAME=Docker Optimized App
      - APP_VERSION=2.0.0
      - DEBUG=false
    volumes:
      - app-data:/data
      - ./config:/app/config:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

volumes:
  app-data:
    driver: local
